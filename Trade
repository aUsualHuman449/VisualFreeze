-- Create the main GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ScamTradeGUI"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 220)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -110)
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainFrame.BorderSizePixel = 0
mainFrame.Draggable = true
mainFrame.Active = true
mainFrame.Parent = screenGui

-- Title
local title = Instance.new("TextLabel")
title.Text = "Human's Scam Trade"
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.TextSize = 20
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.Parent = mainFrame

-- TikTok Label
local tiktokLabel = Instance.new("TextLabel")
tiktokLabel.Text = "tiktok: best.roblox.scriptsz"
tiktokLabel.Size = UDim2.new(1, 0, 0, 25)
tiktokLabel.Position = UDim2.new(0, 0, 0, 30)
tiktokLabel.TextSize = 16
tiktokLabel.TextColor3 = Color3.new(1, 1, 1)
tiktokLabel.BackgroundTransparency = 1
tiktokLabel.Font = Enum.Font.SourceSans
tiktokLabel.Parent = mainFrame

-- Function to create a toggle switch
local function createToggle(yPos, labelText)
	local box = Instance.new("Frame")
	box.Size = UDim2.new(1, -20, 0, 40)
	box.Position = UDim2.new(0, 10, 0, yPos)
	box.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	box.BorderColor3 = Color3.new(0, 0, 0)
	box.BorderSizePixel = 1
	box.Parent = mainFrame

	local label = Instance.new("TextLabel")
	label.Text = labelText
	label.Size = UDim2.new(0.6, 0, 1, 0)
	label.Position = UDim2.new(0, 10, 0, 0)
	label.TextSize = 12
	label.TextColor3 = Color3.new(1, 1, 1)
	label.BackgroundTransparency = 1
	label.Font = Enum.Font.SourceSans
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Parent = box

	local switchBox = Instance.new("Frame")
	switchBox.Size = UDim2.new(0, 50, 0, 30)
	switchBox.Position = UDim2.new(1, -60, 0.5, -15)
	switchBox.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
	switchBox.BorderColor3 = Color3.new(0, 0, 0)
	switchBox.Parent = box

	local corner1 = Instance.new("UICorner")
	corner1.CornerRadius = UDim.new(1, 0)
	corner1.Parent = switchBox

	local toggleBtn = Instance.new("TextButton")
	toggleBtn.Size = UDim2.new(0, 28, 0, 28)
	toggleBtn.Position = UDim2.new(0, 1, 0, 1)
	toggleBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
	toggleBtn.BorderSizePixel = 0
	toggleBtn.Text = ""
	toggleBtn.AutoButtonColor = false
	toggleBtn.Parent = switchBox

	local corner2 = Instance.new("UICorner")
	corner2.CornerRadius = UDim.new(1, 0)
	corner2.Parent = toggleBtn

	local toggled = false
	toggleBtn.MouseButton1Click:Connect(function()
		if toggled then
			toggleBtn:TweenPosition(UDim2.new(0, 1, 0, 1), "Out", "Sine", 0.2, true)
			toggleBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
		else
			toggleBtn:TweenPosition(UDim2.new(0, 21, 0, 1), "Out", "Sine", 0.2, true)
			toggleBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
		end
		toggled = not toggled
	end)
end

-- Create the toggle rows
createToggle(65, "freeze trade")
createToggle(115, "force accept")
createToggle(165, "add all items")
