-- LocalScript in StarterGui

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "ScamTradeGUI"

-- Function to make rounded corners
local function applyUICorner(instance, radius)
	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, radius)
	corner.Parent = instance
end

-- Main frame
local mainFrame = Instance.new("Frame", gui)
mainFrame.Size = UDim2.new(0, 300, 0, 220)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -110)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
applyUICorner(mainFrame, 12)

-- Title label
local title = Instance.new("TextLabel", mainFrame)
title.Text = "Human's Scam Trade"
title.Size = UDim2.new(1, 0, 0, 30)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextSize = 16

-- Button info
local buttonData = {
	{label = "trade freeze", position = UDim2.new(0, 10, 0, 40)},
	{label = "auto accept", position = UDim2.new(0, 10, 0, 90)},
	{label = "add all items", position = UDim2.new(0, 10, 0, 140)},
}

for i, data in ipairs(buttonData) do
	-- Container
	local container = Instance.new("Frame", mainFrame)
	container.Size = UDim2.new(1, -20, 0, 40)
	container.Position = data.position
	container.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
	container.BorderSizePixel = 0
	container.Name = data.label
	applyUICorner(container, 8)

	-- Label
	local label = Instance.new("TextLabel", container)
	label.Text = data.label
	label.Size = UDim2.new(0.6, 0, 1, 0)
	label.BackgroundTransparency = 1
	label.TextColor3 = Color3.fromRGB(255, 255, 255)
	label.Font = Enum.Font.SourceSans
	label.TextSize = 12
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Position = UDim2.new(0, 10, 0, 0)

	-- Button
	local button = Instance.new("TextButton", container)
	button.Size = UDim2.new(0.3, 0, 0.8, 0)
	button.Position = UDim2.new(0.65, 0, 0.1, 0)
	button.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
	button.Text = ""
	button.Name = "ToggleButton"
	applyUICorner(button, 8)

	local toggled = false
	button.MouseButton1Click:Connect(function()
		toggled = not toggled
		if toggled then
			button:TweenPosition(UDim2.new(0.75, 0, 0.1, 0), "Out", "Quad", 0.2, true)
			button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
		else
			button:TweenPosition(UDim2.new(0.65, 0, 0.1, 0), "Out", "Quad", 0.2, true)
			button.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
		end
	end)
end
